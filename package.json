{
  "name": "ngx-imageviewer-app",
  "version": "0.0.0-development",
  "author": "Hallyson Almeida <hallysonh@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hallysonh/ngx-imageviewer"
  },
  "homepage": "https://github.com/hallysonh/ngx-imageviewer#readme",
  "scripts": {
    "ng": "ng",
    "start": "npm run build:lib && ng serve",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build": "npm run build:lib",
    "build:lib": "ng build ngx-imageviewer --configuration production && cp README.md dist/ngx-imageviewer",
    "build:docs": "ng build ngx-imageviewer-app --configuration production --build-optimizer --vendor-chunk --output-path docs --base-href=/ngx-imageviewer/",
    "postbuild": "tar -C dist --overwrite -czf dist/ngx-imageviewer.tgz ngx-imageviewer",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "commit": "git-cz"
  },
  "dependencies": {
    "@angular/animations": "^14.3.0",
    "@angular/cdk": "^14.2.7",
    "@angular/common": "^14.3.0",
    "@angular/compiler": "^14.3.0",
    "@angular/core": "^14.3.0",
    "@angular/flex-layout": "^14.0.0-beta.41",
    "@angular/forms": "^14.3.0",
    "@angular/material": "^14.2.7",
    "@angular/platform-browser": "^14.3.0",
    "@angular/platform-browser-dynamic": "^14.3.0",
    "@angular/platform-server": "^14.3.0",
    "@angular/router": "^14.3.0",
    "core-js": "^2.5.4",
    "hammerjs": "^2.0.8",
    "pdfjs-dist": "2.0.489",
    "rxjs": "~7.5.0",
    "showdown": "^1.8.6",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.11",
    "@angular/cli": "^14.2.11",
    "@angular/compiler-cli": "^14.3.0",
    "@angular/language-service": "^14.3.0",
    "@types/jasmine": "^4.3.1",
    "@types/jasminewd2": "^2.0.10",
    "@types/node": "^12.11.1",
    "@types/showdown": "^1.7.3",
    "codelyzer": "^6.0.0",
    "commitizen": "^2.9.6",
    "cp": "^0.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "jasmine": "^4.6.0",
    "jasmine-core": "^4.6.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "ng-packagr": "^14.2.2",
    "protractor": "^7.0.0",
    "puppeteer": "^19.9.0",
    "semantic-release": "^15.11.0",
    "travis-deploy-once": "^5.0.9",
    "ts-node": "^6.0.3",
    "tslint": "~6.1.0",
    "typescript": "~4.7.2"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist/ngx-imageviewer"
      },
      {
        "path": "@semantic-release/github",
        "assets": [
          "dist/ngx-imageviewer.tgz"
        ]
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "greenkeeper": {
    "ignore": [
      "typescript"
    ]
  }
}
